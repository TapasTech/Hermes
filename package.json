{
  "name": "Hermes",
  "version": "0.1.0",
  "description": "Say in Data",
  "scripts": {
    "schema": "node ./bin/schema.js",
    "start": "tapas-build",
    "build:new": "rimraf build && NODE_ENV=production webpack --config webpack.config.prod.js",
    "build": "node ./node_modules/.bin/tapas-build --production",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TapasTech/Hermes.git"
  },
  "author": "TapasFE",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TapasTech/Hermes/issues"
  },
  "homepage": "https://github.com/TapasTech/Hermes#readme",
  "tapas": {
    "index": "./src/index.html",
    "entry": "./src/index.js",
    "output": "./build",
    "port": "8008",
    "aliasRoot": "#",
    "proxy": {
      "/graphql": "http://sayindata.dtcj.com:8080/graphql"
    }
  },
  "config": {
    "name": "",
    "ghooks": {
      "commit-msg": "node ./node_modules/.bin/validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    }
  },
  "devDependencies": {
    "babel-plugin-transform-class-properties": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "ghooks": "^1.0.3",
    "graphql-readable": "^1.1.2",
    "koa-webpack-dev-middleware": "^1.1.0",
    "koa-webpack-hot-middleware": "^1.0.3",
    "request": "^2.69.0",
    "tapas-build": "^0.4.5",
    "validate-commit-msg": "^2.1.0",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "event": "^1.0.0",
    "flux": "^2.1.1",
    "graphql": "^0.4.18",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^1.2.0",
    "normalize.css": "^3.0.3",
    "qiniu": "^6.1.9",
    "qrcode-react": "^0.1.10",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-router": "^2.0.0",
    "tapas-editor": "^1.0.3"
  }
}
